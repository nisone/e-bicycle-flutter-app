  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter: Attach to Device",
      "type": "dart",
      "request": "attach",
      "program": "lib/main_dev.dart",
      "args": [
        "--flavor",
        "dev",
        "target",
        "lib/main_dev.dart"
      ],
    },
    {
      "name": "dev",
      "request": "launch",
      "type": "dart",
      "program": "lib/main_dev.dart",
      "args": [
        "--flavor",
        "dev",
        "target",
        "lib/main_dev.dart"
      ],
      "flutterMode": "debug"
    },
    {
      "name": "prod",
      "request": "launch",
      "type": "dart",
      "program": "lib/main_prod.dart",
      "args": [
        "--flavor",
        "prod",
        "target",
        "lib/main_prod.dart"
      ],
      "flutterMode": "release"
    },
    {
      "name": "bike_rental (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile"
    },
    {
      "name": "bike_rental (release mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release"
    }
  ]
}